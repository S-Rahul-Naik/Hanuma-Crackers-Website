{
  "name": "hanuma-crackers-backend",
  "version": "1.0.0",
  "description": "Backend API for Hanuma Crackers e-commerce platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node scripts/seedData.js",
    "seed:prod": "NODE_ENV=production node scripts/seedData.js",
    "reset:production": "node reset-production.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "build": "echo 'No build step required for Node.js'",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop hanuma-api",
    "pm2:restart": "pm2 restart hanuma-api",
    "pm2:logs": "pm2 logs hanuma-api"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dompurify": "^3.2.7",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.2",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "validator": "^13.11.0",
    "winston": "^3.17.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "pm2": "^5.3.0",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "ecommerce",
    "crackers",
    "fireworks",
    "api",
    "express",
    "mongodb"
  ],
  "author": "Hanuma Crackers Team",
  "license": "MIT"
}
